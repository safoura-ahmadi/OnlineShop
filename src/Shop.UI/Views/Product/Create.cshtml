<div class="container px-5 my-5">

    <form method="post" asp-controller="Product" asp-action="CreateProduct">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert"> @TempData["ErrorMessage"] </div>
        }


        <!-- نام محصول -->
        <div class="form-floating mb-3">
            <input class="form-control" id="productName" dir="rtl" name="name" placeholder="نام محصول" type="text" required />
        </div>

        <!-- قیمت -->
        <div class="form-floating mb-3">
            <input class="form-control" id="productPrice" dir="rtl" name="price" placeholder="قیمت" type="number" step="0.01" required />
        </div>

        <!-- موجودی انبار -->
        <div class="form-floating mb-3">
            <input class="form-control" id="productQuantity" dir="rtl" name="quantity" placeholder="موجودی انبار" type="number" required />
        </div>

        <!-- دسته‌بندی -->
        <div class="form-floating mb-3">
            <select class="form-control" id="categoryId" name="categoryId" required>
                <option dir="ltr" value="">انتخاب دسته‌بندی</option>
                @foreach (var category in ViewBag.Categories as IEnumerable<SelectListItem>)
                {
                    <option value="@category.Value">@category.Text</option>
                }
            </select>
        </div>

        <!-- دکمه ارسال -->
        <div class="d-grid">
            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">ثبت</button>
        </div>
    </form>
</div>
